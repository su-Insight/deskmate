{
  "name": "deskmate",
  "version": "1.0.0",
  "description": "DeskMate - 智能桌面模块化工作空间",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"vite\" \"npm run dev:wait-and-start\"",
    "dev:electron": "vite",
    "dev:wait-and-start": "timeout /t 3 >nul && npx electron . --dev",
    "dev:start": "npx electron . --dev",
    "dev:backend": "cd backend && python app.py",
    "start": "electron . --dev",
    "build": "npm run build:electron && npm run build:backend",
    "build:electron": "tsc && vite build && copy /Y src\\renderer\\config.html dist\\renderer\\config.html >nul",
    "build:backend": "cd backend && pip install -r requirements.txt",
    "build:pre": "tsc -p tsconfig.preload.json && tsc -p tsconfig.main.json && npm run build:electron && npx electron-builder --win --dir",
    "build:all": "npm run build:pre || npx electron-builder --win --dir",
    "preview": "npm run build && electron .",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest"
  },
  "keywords": [
    "electron",
    "desktop",
    "workspace",
    "ai",
    "local-first"
  ],
  "author": "DeskMate Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.11",
    "@types/react-dom": "^19.2.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/sqlite3": "^3.1.11",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.55.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.1.0",
    "react-syntax-highlighter": "^15.6.6",
    "remark-gfm": "^4.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
